<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.example.associationwords.model.User" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/side_nav_bar"
        android:gravity="bottom"
        android:orientation="vertical"

        android:paddingStart="@dimen/nav_view_hider_main_margin"
        android:paddingTop="@dimen/nav_view_hider_main_margin"
        android:paddingEnd="@dimen/nav_view_hider_main_margin"
        android:paddingBottom="@dimen/nav_view_hider_main_margin"

        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/iv_user_image_nvh"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/nav_header_desc"
            app:layout_constraintBottom_toTopOf="@+id/tv_user_name_nvh"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_user_name_nvh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.name}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/nav_header_subtitle" />

        <ImageView
            android:id="@+id/iv_theme_change"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/nav_header_desc"
            android:src="@drawable/ic_stars_moon_40dp"
            app:layout_constraintBottom_toTopOf="@+id/iv_user_image_nvh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
